{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "A starter template for nodejs+typescript project",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run remove-dist && npm run build-ts && npm run tslint && npm run watch",
    "serve": "node dist/app.js",
    "watch-node": "nodemon dist/app.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "remove-dist": "rimraf -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/subbu683/node-typescript-starter.git"
  },
  "keywords": [
    "Nodejs",
    "typescript"
  ],
  "author": "Subbu",
  "license": "ISC",
  "homepage": "https://bitbucket.org/subbu683/node-typescript-starter#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "mongoose": "^5.3.12"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/mongoose": "^5.3.1",
    "concurrently": "^4.0.1",
    "nodemon": "^1.18.6",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
